{
  "name": "shogi",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "test": "turbo test",
    "test:unit": "turbo test:unit",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "lint:affected": "turbo lint --filter='[HEAD~1]'",
    "lint:rust": "pnpm lint:rust:core && pnpm lint:rust:tauri",
    "lint:rust:core": "cd packages/rust-core && cargo clippy --workspace --all-targets -- -D warnings",
    "lint:rust:tauri": "cd apps/desktop/src-tauri && cargo clippy --workspace --all-targets -- -D warnings",
    "lint:rust:fix": "pnpm lint:rust:fix:core && pnpm lint:rust:fix:tauri",
    "lint:rust:fix:core": "cd packages/rust-core && cargo clippy --workspace --fix --allow-dirty",
    "lint:rust:fix:tauri": "cd apps/desktop/src-tauri && cargo clippy --workspace --fix --allow-dirty",
    "lint:all": "pnpm lint && pnpm lint:rust",
    "build:rust": "pnpm build:rust:core && pnpm build:rust:tauri",
    "build:rust:core": "cd packages/rust-core && cargo build --workspace",
    "build:rust:tauri": "cd apps/desktop/src-tauri && cargo build --workspace",
    "build:rust:release": "pnpm build:rust:release:core && pnpm build:rust:release:tauri",
    "build:rust:release:core": "cd packages/rust-core && cargo build --workspace --release",
    "build:rust:release:tauri": "cd apps/desktop/src-tauri && cargo build --workspace --release",
    "typecheck": "turbo typecheck",
    "typecheck:affected": "turbo typecheck --filter='[HEAD~1]'",
    "prepare": "git config core.hooksPath .husky",
    "format": "pnpm format:js && pnpm format:rust",
    "format:check": "pnpm format:check:js && pnpm format:check:rust",
    "format:ci": "pnpm format:check:js",
    "format:js": "biome format --write .",
    "format:check:js": "biome format .",
    "format:rust": "cargo fmt --all --manifest-path packages/rust-core/Cargo.toml && cargo fmt --all --manifest-path apps/desktop/src-tauri/Cargo.toml",
    "format:check:rust": "cargo fmt --all --manifest-path packages/rust-core/Cargo.toml -- --check && cargo fmt --all --manifest-path apps/desktop/src-tauri/Cargo.toml -- --check",
    "clean": "turbo clean && rm -rf node_modules apps/*/node_modules apps/*/dist packages/*/node_modules packages/*/dist",
    "pre-commit": "lint-staged"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.9",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "turbo": "^2.6.3",
    "typescript": "~5.9.3",
    "typescript-language-server": "^5.1.3"
  },
  "overrides": {
    "@biomejs/biome": "2.3.8",
    "react": "19.2.1",
    "react-dom": "19.2.1",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3"
  },
  "packageManager": "pnpm@10.24.0",
  "volta": {
    "node": "24.11.1"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx,mjs,cjs,json,md,css,yml,yaml}": [
      "pnpm --workspace-root exec biome format --write --files-ignore-unknown=true"
    ]
  }
}
