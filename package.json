{
  "name": "shogi",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "test": "turbo test",
    "test:unit": "turbo test:unit",
    "test:affected": "turbo test --filter='[HEAD~1]'",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "lint:affected": "turbo lint --filter='[HEAD~1]'",
    "typecheck": "turbo typecheck",
    "typecheck:affected": "turbo typecheck --filter='[HEAD~1]'",
    "format": "biome format --write .",
    "format:check": "biome check .",
    "clean": "turbo clean && rm -rf node_modules apps/*/node_modules apps/*/dist packages/*/node_modules packages/*/dist",
    "pre-commit": "lint-staged"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "turbo": "^2.6.1",
    "typescript": "~5.9.3",
    "typescript-language-server": "^5.1.1"
  },
  "overrides": {
    "@biomejs/biome": "2.3.5",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "@types/react": "19.2.4",
    "@types/react-dom": "19.2.3"
  },
  "packageManager": "pnpm@10.22.0",
  "volta": {
    "node": "24.11.1"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx,css}": [
      "biome check --write --files-ignore-unknown=true"
    ]
  }
}
