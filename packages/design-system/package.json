{
    "name": "@shogi/design-system",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "sideEffects": [
        "./src/theme.css"
    ],
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "default": "./dist/index.js"
        },
        "./theme.css": "./src/theme.css",
        "./tailwind.preset": "./tailwind.preset.ts",
        "./src/theme.css": "./src/theme.css"
    },
    "scripts": {
        "build": "tsc -p tsconfig.build.json",
        "dev": "tsc -p tsconfig.build.json --watch",
        "format": "pnpm --workspace-root exec biome format --write .",
        "format:check": "pnpm --workspace-root exec biome format .",
        "lint": "pnpm --workspace-root exec biome check .",
        "lint:fix": "pnpm --workspace-root exec biome check --write --files-ignore-unknown=true",
        "typecheck": "tsc -p tsconfig.json",
        "test": "vitest"
    },
    "dependencies": {
        "clsx": "^2.1.1",
        "tailwind-merge": "^2.5.5",
        "tailwindcss-animate": "^1.0.7"
    },
    "peerDependencies": {
        "react": ">=19 <20",
        "react-dom": ">=19 <20",
        "tailwindcss": "^3.4.0"
    },
    "devDependencies": {
        "@testing-library/react": "^16.3.1",
        "@types/react": "^19.2.7",
        "happy-dom": "^20.0.11",
        "typescript": "~5.9.3",
        "vitest": "^4.0.15"
    }
}
