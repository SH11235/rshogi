{
    "name": "@shogi/app-core",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "sideEffects": [
        "./dist/index.js",
        "./dist/index.web.js",
        "./dist/index.tauri.js",
        "./dist/game/index.js",
        "./dist/game/index.web.js",
        "./dist/game/index.tauri.js"
    ],
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "default": "./dist/index.js"
        }
    },
    "scripts": {
        "build": "tsc -p tsconfig.build.json",
        "dev": "tsc -p tsconfig.build.json --watch",
        "format": "pnpm --workspace-root exec biome format --write .",
        "format:check": "pnpm --workspace-root exec biome format .",
        "lint": "pnpm --workspace-root exec biome check .",
        "lint:fix": "pnpm --workspace-root exec biome check --write --files-ignore-unknown=true",
        "typecheck": "tsc -p tsconfig.json",
        "test": "vitest"
    },
    "dependencies": {
        "@tauri-apps/api": "^2.9.0"
    },
    "devDependencies": {
        "typescript": "~5.9.3",
        "vitest": "^3.1.3"
    }
}
