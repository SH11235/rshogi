{
    "$schema": "https://biomejs.dev/schemas/2.3.5/schema.json",
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 100
    },
    "linter": {
        "enabled": true,
        "rules": {
            "style": {
                "useImportType": "error"
            },
            "correctness": {
                "noUnusedImports": "error"
            },
            "suspicious": {
                "noExplicitAny": "warn"
            }
        }
    },
    "files": {
        "includes": [
            "**",
            "!**/tsconfig*.json",
            "!**/package.json",
            "!**/package-lock.json",
            "!**/pnpm-lock.yaml",
            "!**/node_modules/**",
            "!**/.git/**",
            "!**/dist/**",
            "!**/.turbo/**",
            "!**/.vscode/**",
            "!**/test-results/**",
            "!**/playwright-report/**",
            "!**/coverage/**",
            "!**/packages/rust-core/**",
            "!**/packages/web/src/wasm/**",
            "!**/src-tauri/**",
            "!**/memo/**"
        ]
    }
}
